 ---
php_extensions:
- memcache
- mbstring
- apc
- mysql
- eaccelerator
- curl
- gd
- mcrypt
- sysvmsg
php_error_reporting: E_ALL
php_display_errors: "On"
php_date_timezone: Asia/Shanghai
php_max_execution_time: "30"
php_max_input_time: "60"
php_post_max_size: 8M
php_file_uploads: "On"
php_upload_max_filesize: 2M
php_max_file_uploads: "20"
php_iconv_internal_encoding: UTF-8
php_sysvshm.init_mem: 1000
shared_writable_dirs:
- /application/cache
- /application/logs
- /application/upload
url_rewrites:
    -
    rule: ".* /error"
    conditions:
        - "!-f $request_filename"
        - "!-d $request_filename"
